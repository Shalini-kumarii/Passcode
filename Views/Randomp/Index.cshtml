@model Randomp;
@using Random_passcode.Models;
@using System.Collections.Generic;

<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <title>Hello!</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>

        <form asp-action="Result">
    
            @if(Model != null && Model.Passcode != null)
            {
                <span asp-validation-for="Passcode"></span>
                <label asp-for="Passcode"> </label>
                <input asp-for="Passcode" value=@Model.Passcode>
            } else 
            {
                <label asp-for="Passcode"> </label>
                <input asp-for="Passcode" value="">
            }
            <input value="Generate" type="submit">
        </form>
</body>
</html>